<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"  
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.ecarinfo.weichexin.dao.ActivityCategoryDao">  
    
    <resultMap type="ActivityCategory" id="ActivityCategoryResultMap">  
		<id 		property="id" column="id"/>
		<result 	property="name" column="name"/>
		<result 	property="orderNo" column="order_no"/>
		<result 	property="ctime" column="ctime"/>
		<result 	property="orgCode" column="org_code"/>
		<result 	property="orgId" column="org_id"/>
		 
    </resultMap>
    
    <select id="findByPK"  resultType="ActivityCategory" resultMap="ActivityCategoryResultMap">  
        <![CDATA[ 
        	SELECT * FROM activity_category WHERE id = #{id}        	
        ]]>   
    </select>
    
    <select id="findOneByAttr" resultType="ActivityCategory" resultMap="ActivityCategoryResultMap">  
        <![CDATA[ 
        	SELECT * FROM activity_category WHERE `${fieldName}` = #{value} limit 1        	
        ]]>
    </select>
    
    <select id="findByAttr" resultType="ActivityCategory" resultMap="ActivityCategoryResultMap">  
        <![CDATA[ 
        	SELECT * FROM activity_category WHERE `${fieldName}` = #{value}        	
        ]]>
    </select>
    
    <select id="findOne" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="ActivityCategory" resultMap="ActivityCategoryResultMap">  
        <![CDATA[ 
        	SELECT ${selectFields} FROM activity_category WHERE ${uniqueWhereCond}        	
        ]]>
    </select>
    
    <select id="findMap" parameterType="com.ecarinfo.persist.criteria.Criteria" resultMap="ActivityCategoryResultMap">  
        <![CDATA[ 
		    SELECT ${selectFields} FROM activity_category WHERE ${whereCond}
        ]]>
    </select>
    
    <select id="findAll" resultType="ActivityCategory" resultMap="ActivityCategoryResultMap">  
        <![CDATA[ 
        	SELECT * FROM activity_category        	
        ]]>
    </select>
    
    <select id="findList" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="ActivityCategory" resultMap="ActivityCategoryResultMap">  
        <![CDATA[ 
      	 	SELECT ${selectFields} FROM activity_category WHERE ${whereCond}      	 	
        ]]>
    </select>
    
    <select id="count" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="long">  
        <![CDATA[ 
      	 	SELECT COUNT(id) FROM activity_category WHERE ${whereCond}      	 	
        ]]>
    </select>
    
    <insert id="insert" parameterType="ActivityCategory">
    	<![CDATA[ 
    		INSERT INTO activity_category(name,order_no,ctime,org_code,org_id) VALUES (#{name},#{orderNo},#{ctime},#{orgCode},#{orgId})    		
        ]]> 
        <selectKey resultType="Integer" order="AFTER" keyProperty="id">
			SELECT LAST_INSERT_ID() AS ID    
		</selectKey>
    </insert>
	
	<update id="updateWithCriteria" parameterType="com.ecarinfo.persist.criteria.Criteria">
		<![CDATA[ 
		UPDATE activity_category SET ${updateField} WHERE ${whereCond}	
		]]> 	
	</update>
	
	<update id="update" parameterType="ActivityCategory">
		<![CDATA[ 
			UPDATE activity_category SET name = #{name},order_no = #{orderNo},ctime = #{ctime},org_code = #{orgCode},org_id = #{orgId} WHERE id = #{id}
		]]> 	
	</update>
	
	<delete id="deleteEntity" parameterType="ActivityCategory">
		<![CDATA[ 
    		DELETE FROM activity_category WHERE id = #{id}    		
        ]]> 
	</delete>
	
	<delete id="deleteByPK" parameterType="Integer">
		<![CDATA[ 
    		DELETE FROM activity_category WHERE id = #{id}    		
        ]]> 
	</delete>
	
	<delete id="delete" parameterType="com.ecarinfo.persist.criteria.Criteria">
		<![CDATA[ 
    		DELETE FROM activity_category WHERE ${whereCond}     		
        ]]> 
	</delete>
	
</mapper>  