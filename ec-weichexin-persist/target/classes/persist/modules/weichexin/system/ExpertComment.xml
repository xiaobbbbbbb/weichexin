<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"  
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.ecarinfo.weichexin.dao.ExpertCommentDao">  
    
    <resultMap type="ExpertComment" id="ExpertCommentResultMap">  
		<id 		property="id" column="id"/>
		<result 	property="expertId" column="expert_id"/>
		<result 	property="content" column="content"/>
		<result 	property="score" column="score"/>
		<result 	property="ctime" column="ctime"/>
		<result 	property="carId" column="car_id"/>
		 
    </resultMap>
    
    <select id="findByPK"  resultType="ExpertComment" resultMap="ExpertCommentResultMap">  
        <![CDATA[ 
        	SELECT * FROM expert_comment WHERE id = #{id}        	
        ]]>   
    </select>
    
    <select id="findOneByAttr" resultType="ExpertComment" resultMap="ExpertCommentResultMap">  
        <![CDATA[ 
        	SELECT * FROM expert_comment WHERE `${fieldName}` = #{value} limit 1        	
        ]]>
    </select>
    
    <select id="findByAttr" resultType="ExpertComment" resultMap="ExpertCommentResultMap">  
        <![CDATA[ 
        	SELECT * FROM expert_comment WHERE `${fieldName}` = #{value}        	
        ]]>
    </select>
    
    <select id="findOne" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="ExpertComment" resultMap="ExpertCommentResultMap">  
        <![CDATA[ 
        	SELECT ${selectFields} FROM expert_comment WHERE ${uniqueWhereCond}        	
        ]]>
    </select>
    
    <select id="findMap" parameterType="com.ecarinfo.persist.criteria.Criteria" resultMap="ExpertCommentResultMap">  
        <![CDATA[ 
		    SELECT ${selectFields} FROM expert_comment WHERE ${whereCond}
        ]]>
    </select>
    
    <select id="findAll" resultType="ExpertComment" resultMap="ExpertCommentResultMap">  
        <![CDATA[ 
        	SELECT * FROM expert_comment        	
        ]]>
    </select>
    
    <select id="findList" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="ExpertComment" resultMap="ExpertCommentResultMap">  
        <![CDATA[ 
      	 	SELECT ${selectFields} FROM expert_comment WHERE ${whereCond}      	 	
        ]]>
    </select>
    
    <select id="count" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="long">  
        <![CDATA[ 
      	 	SELECT COUNT(id) FROM expert_comment WHERE ${whereCond}      	 	
        ]]>
    </select>
    
    <insert id="insert" parameterType="ExpertComment">
    	<![CDATA[ 
    		INSERT INTO expert_comment(expert_id,content,score,ctime,car_id) VALUES (#{expertId},#{content},#{score},#{ctime},#{carId})    		
        ]]> 
        <selectKey resultType="Integer" order="AFTER" keyProperty="id">
			SELECT LAST_INSERT_ID() AS ID    
		</selectKey>
    </insert>
	
	<update id="updateWithCriteria" parameterType="com.ecarinfo.persist.criteria.Criteria">
		<![CDATA[ 
		UPDATE expert_comment SET ${updateField} WHERE ${whereCond}	
		]]> 	
	</update>
	
	<update id="update" parameterType="ExpertComment">
		<![CDATA[ 
			UPDATE expert_comment SET expert_id = #{expertId},content = #{content},score = #{score},ctime = #{ctime},car_id = #{carId} WHERE id = #{id}
		]]> 	
	</update>
	
	<delete id="deleteEntity" parameterType="ExpertComment">
		<![CDATA[ 
    		DELETE FROM expert_comment WHERE id = #{id}    		
        ]]> 
	</delete>
	
	<delete id="deleteByPK" parameterType="Integer">
		<![CDATA[ 
    		DELETE FROM expert_comment WHERE id = #{id}    		
        ]]> 
	</delete>
	
	<delete id="delete" parameterType="com.ecarinfo.persist.criteria.Criteria">
		<![CDATA[ 
    		DELETE FROM expert_comment WHERE ${whereCond}     		
        ]]> 
	</delete>
	
</mapper>  