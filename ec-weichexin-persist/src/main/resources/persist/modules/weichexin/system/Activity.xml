<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"  
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.ecarinfo.weichexin.dao.ActivityDao">  
    
    <resultMap type="Activity" id="ActivityResultMap">  
		<id 		property="id" column="id"/>
		<result 	property="title" column="title"/>
		<result 	property="content" column="content"/>
		<result 	property="categoryId" column="category_id"/>
		<result 	property="image" column="image"/>
		<result 	property="cuserId" column="cuser_id"/>
		<result 	property="auserId" column="auser_id"/>
		<result 	property="checkTime" column="check_time"/>
		<result 	property="checkReason" column="check_reason"/>
		<result 	property="orgId" column="org_id"/>
		<result 	property="orgCode" column="org_code"/>
		<result 	property="groupId" column="group_id"/>
		<result 	property="phoneNo" column="phone_no"/>
		<result 	property="ctime" column="ctime"/>
		<result 	property="btime" column="btime"/>
		<result 	property="etime" column="etime"/>
		<result 	property="status" column="status"/>
		<result 	property="clickNum" column="click_num"/>
		<result 	property="pushNum" column="push_num"/>
		<result 	property="address" column="address"/>
		<result 	property="mark" column="mark"/>
		<result 	property="auserName" column="auser_name"/>
		<result 	property="cuserName" column="cuser_name"/>
		<result 	property="publishCriterias" column="publish_criterias"/>
		<result 	property="discardUserId" column="discard_user_id"/>
		<result 	property="discardTime" column="discard_time"/>
		<result 	property="wcxClickNums" column="wcx_click_nums"/>
		<result 	property="publishChannel" column="publish_channel"/>
		<result 	property="needAppoint" column="need_appoint"/>
		<result 	property="isTop" column="is_top"/>
		<result 	property="topTime" column="top_time"/>
		 
    </resultMap>
    
    <select id="findByPK"  resultType="Activity" resultMap="ActivityResultMap">  
        <![CDATA[ 
        	SELECT * FROM activity WHERE id = #{id}        	
        ]]>   
    </select>
    
    <select id="findOneByAttr" resultType="Activity" resultMap="ActivityResultMap">  
        <![CDATA[ 
        	SELECT * FROM activity WHERE `${fieldName}` = #{value} limit 1        	
        ]]>
    </select>
    
    <select id="findByAttr" resultType="Activity" resultMap="ActivityResultMap">  
        <![CDATA[ 
        	SELECT * FROM activity WHERE `${fieldName}` = #{value}        	
        ]]>
    </select>
    
    <select id="findOne" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="Activity" resultMap="ActivityResultMap">  
        <![CDATA[ 
        	SELECT ${selectFields} FROM activity WHERE ${uniqueWhereCond}        	
        ]]>
    </select>
    
    <select id="findMap" parameterType="com.ecarinfo.persist.criteria.Criteria" resultMap="ActivityResultMap">  
        <![CDATA[ 
		    SELECT ${selectFields} FROM activity WHERE ${whereCond}
        ]]>
    </select>
    
    <select id="findAll" resultType="Activity" resultMap="ActivityResultMap">  
        <![CDATA[ 
        	SELECT * FROM activity        	
        ]]>
    </select>
    
    <select id="findList" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="Activity" resultMap="ActivityResultMap">  
        <![CDATA[ 
      	 	SELECT ${selectFields} FROM activity WHERE ${whereCond}      	 	
        ]]>
    </select>
    
    <select id="count" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="long">  
        <![CDATA[ 
      	 	SELECT COUNT(id) FROM activity WHERE ${whereCond}      	 	
        ]]>
    </select>
    
    <insert id="insert" parameterType="Activity">
    	<![CDATA[ 
    		INSERT INTO activity(title,content,category_id,image,cuser_id,auser_id,check_time,check_reason,org_id,org_code,group_id,phone_no,ctime,btime,etime,status,click_num,push_num,address,mark,auser_name,cuser_name,publish_criterias,discard_user_id,discard_time,wcx_click_nums,publish_channel,need_appoint,is_top,top_time) VALUES (#{title},#{content},#{categoryId},#{image},#{cuserId},#{auserId},#{checkTime},#{checkReason},#{orgId},#{orgCode},#{groupId},#{phoneNo},#{ctime},#{btime},#{etime},#{status},#{clickNum},#{pushNum},#{address},#{mark},#{auserName},#{cuserName},#{publishCriterias},#{discardUserId},#{discardTime},#{wcxClickNums},#{publishChannel},#{needAppoint},#{isTop},#{topTime})    		
        ]]> 
        <selectKey resultType="Long" order="AFTER" keyProperty="id">
			SELECT LAST_INSERT_ID() AS ID    
		</selectKey>
    </insert>
	
	<update id="updateWithCriteria" parameterType="com.ecarinfo.persist.criteria.Criteria">
		<![CDATA[ 
		UPDATE activity SET ${updateField} WHERE ${whereCond}	
		]]> 	
	</update>
	
	<update id="update" parameterType="Activity">
		<![CDATA[ 
			UPDATE activity SET title = #{title},content = #{content},category_id = #{categoryId},image = #{image},cuser_id = #{cuserId},auser_id = #{auserId},check_time = #{checkTime},check_reason = #{checkReason},org_id = #{orgId},org_code = #{orgCode},group_id = #{groupId},phone_no = #{phoneNo},ctime = #{ctime},btime = #{btime},etime = #{etime},status = #{status},click_num = #{clickNum},push_num = #{pushNum},address = #{address},mark = #{mark},auser_name = #{auserName},cuser_name = #{cuserName},publish_criterias = #{publishCriterias},discard_user_id = #{discardUserId},discard_time = #{discardTime},wcx_click_nums = #{wcxClickNums},publish_channel = #{publishChannel},need_appoint = #{needAppoint},is_top = #{isTop},top_time = #{topTime} WHERE id = #{id}
		]]> 	
	</update>
	
	<delete id="deleteEntity" parameterType="Activity">
		<![CDATA[ 
    		DELETE FROM activity WHERE id = #{id}    		
        ]]> 
	</delete>
	
	<delete id="deleteByPK" parameterType="Long">
		<![CDATA[ 
    		DELETE FROM activity WHERE id = #{id}    		
        ]]> 
	</delete>
	
	<delete id="delete" parameterType="com.ecarinfo.persist.criteria.Criteria">
		<![CDATA[ 
    		DELETE FROM activity WHERE ${whereCond}     		
        ]]> 
	</delete>
	
</mapper>  