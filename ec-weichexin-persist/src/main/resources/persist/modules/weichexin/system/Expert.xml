<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"  
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.ecarinfo.weichexin.dao.ExpertDao">  
    
    <resultMap type="Expert" id="ExpertResultMap">  
		<id 		property="id" column="id"/>
		<result 	property="name" column="name"/>
		<result 	property="jobInfo" column="job_info"/>
		<result 	property="phoneNo" column="phone_no"/>
		<result 	property="headImage" column="head_image"/>
		<result 	property="profile" column="profile"/>
		<result 	property="totalScore" column="total_score"/>
		<result 	property="commentCount" column="comment_count"/>
		<result 	property="status" column="status"/>
		<result 	property="addTime" column="add_time"/>
		<result 	property="addUserId" column="add_user_id"/>
		<result 	property="orgCode" column="org_code"/>
		<result 	property="orgId" column="org_id"/>
		 
    </resultMap>
    
    <select id="findByPK"  resultType="Expert" resultMap="ExpertResultMap">  
        <![CDATA[ 
        	SELECT * FROM expert WHERE id = #{id}        	
        ]]>   
    </select>
    
    <select id="findOneByAttr" resultType="Expert" resultMap="ExpertResultMap">  
        <![CDATA[ 
        	SELECT * FROM expert WHERE `${fieldName}` = #{value} limit 1        	
        ]]>
    </select>
    
    <select id="findByAttr" resultType="Expert" resultMap="ExpertResultMap">  
        <![CDATA[ 
        	SELECT * FROM expert WHERE `${fieldName}` = #{value}        	
        ]]>
    </select>
    
    <select id="findOne" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="Expert" resultMap="ExpertResultMap">  
        <![CDATA[ 
        	SELECT ${selectFields} FROM expert WHERE ${uniqueWhereCond}        	
        ]]>
    </select>
    
    <select id="findMap" parameterType="com.ecarinfo.persist.criteria.Criteria" resultMap="ExpertResultMap">  
        <![CDATA[ 
		    SELECT ${selectFields} FROM expert WHERE ${whereCond}
        ]]>
    </select>
    
    <select id="findAll" resultType="Expert" resultMap="ExpertResultMap">  
        <![CDATA[ 
        	SELECT * FROM expert        	
        ]]>
    </select>
    
    <select id="findList" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="Expert" resultMap="ExpertResultMap">  
        <![CDATA[ 
      	 	SELECT ${selectFields} FROM expert WHERE ${whereCond}      	 	
        ]]>
    </select>
    
    <select id="count" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="long">  
        <![CDATA[ 
      	 	SELECT COUNT(id) FROM expert WHERE ${whereCond}      	 	
        ]]>
    </select>
    
    <insert id="insert" parameterType="Expert">
    	<![CDATA[ 
    		INSERT INTO expert(name,job_info,phone_no,head_image,profile,total_score,comment_count,status,add_time,add_user_id,org_code,org_id) VALUES (#{name},#{jobInfo},#{phoneNo},#{headImage},#{profile},#{totalScore},#{commentCount},#{status},#{addTime},#{addUserId},#{orgCode},#{orgId})    		
        ]]> 
        <selectKey resultType="Integer" order="AFTER" keyProperty="id">
			SELECT LAST_INSERT_ID() AS ID    
		</selectKey>
    </insert>
	
	<update id="updateWithCriteria" parameterType="com.ecarinfo.persist.criteria.Criteria">
		<![CDATA[ 
		UPDATE expert SET ${updateField} WHERE ${whereCond}	
		]]> 	
	</update>
	
	<update id="update" parameterType="Expert">
		<![CDATA[ 
			UPDATE expert SET name = #{name},job_info = #{jobInfo},phone_no = #{phoneNo},head_image = #{headImage},profile = #{profile},total_score = #{totalScore},comment_count = #{commentCount},status = #{status},add_time = #{addTime},add_user_id = #{addUserId},org_code = #{orgCode},org_id = #{orgId} WHERE id = #{id}
		]]> 	
	</update>
	
	<delete id="deleteEntity" parameterType="Expert">
		<![CDATA[ 
    		DELETE FROM expert WHERE id = #{id}    		
        ]]> 
	</delete>
	
	<delete id="deleteByPK" parameterType="Integer">
		<![CDATA[ 
    		DELETE FROM expert WHERE id = #{id}    		
        ]]> 
	</delete>
	
	<delete id="delete" parameterType="com.ecarinfo.persist.criteria.Criteria">
		<![CDATA[ 
    		DELETE FROM expert WHERE ${whereCond}     		
        ]]> 
	</delete>
	
</mapper>  