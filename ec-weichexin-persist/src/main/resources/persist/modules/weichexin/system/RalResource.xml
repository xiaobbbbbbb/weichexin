<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"  
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.ecarinfo.weichexin.dao.RalResourceDao">  
    
    <resultMap type="RalResource" id="RalResourceResultMap">  
		<id 		property="resourceId" column="resource_id"/>
		<result 	property="name" column="name"/>
		<result 	property="url" column="url"/>
		<result 	property="icon" column="icon"/>
		<result 	property="parentId" column="parentId"/>
		<result 	property="level" column="level"/>
		<result 	property="isLeaf" column="isLeaf"/>
		<result 	property="message" column="message"/>
		 
    </resultMap>
    
    <select id="findByPK"  resultType="RalResource" resultMap="RalResourceResultMap">  
        <![CDATA[ 
        	SELECT * FROM ral_resource WHERE resource_id = #{resourceId}        	
        ]]>   
    </select>
    
    <select id="findOneByAttr" resultType="RalResource" resultMap="RalResourceResultMap">  
        <![CDATA[ 
        	SELECT * FROM ral_resource WHERE `${fieldName}` = #{value} limit 1        	
        ]]>
    </select>
    
    <select id="findByAttr" resultType="RalResource" resultMap="RalResourceResultMap">  
        <![CDATA[ 
        	SELECT * FROM ral_resource WHERE `${fieldName}` = #{value}        	
        ]]>
    </select>
    
    <select id="findOne" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="RalResource" resultMap="RalResourceResultMap">  
        <![CDATA[ 
        	SELECT ${selectFields} FROM ral_resource WHERE ${uniqueWhereCond}        	
        ]]>
    </select>
    
    <select id="findMap" parameterType="com.ecarinfo.persist.criteria.Criteria" resultMap="RalResourceResultMap">  
        <![CDATA[ 
		    SELECT ${selectFields} FROM ral_resource WHERE ${whereCond}
        ]]>
    </select>
    
    <select id="findAll" resultType="RalResource" resultMap="RalResourceResultMap">  
        <![CDATA[ 
        	SELECT * FROM ral_resource        	
        ]]>
    </select>
    
    <select id="findList" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="RalResource" resultMap="RalResourceResultMap">  
        <![CDATA[ 
      	 	SELECT ${selectFields} FROM ral_resource WHERE ${whereCond}      	 	
        ]]>
    </select>
    
    <select id="count" parameterType="com.ecarinfo.persist.criteria.Criteria" resultType="long">  
        <![CDATA[ 
      	 	SELECT COUNT(resource_id) FROM ral_resource WHERE ${whereCond}      	 	
        ]]>
    </select>
    
    <insert id="insert" parameterType="RalResource">
    	<![CDATA[ 
    		INSERT INTO ral_resource(name,url,icon,parentId,level,isLeaf,message) VALUES (#{name},#{url},#{icon},#{parentId},#{level},#{isLeaf},#{message})    		
        ]]> 
        <selectKey resultType="Integer" order="AFTER" keyProperty="resourceId">
			SELECT LAST_INSERT_ID() AS ID    
		</selectKey>
    </insert>
	
	<update id="updateWithCriteria" parameterType="com.ecarinfo.persist.criteria.Criteria">
		<![CDATA[ 
		UPDATE ral_resource SET ${updateField} WHERE ${whereCond}	
		]]> 	
	</update>
	
	<update id="update" parameterType="RalResource">
		<![CDATA[ 
			UPDATE ral_resource SET name = #{name},url = #{url},icon = #{icon},parentId = #{parentId},level = #{level},isLeaf = #{isLeaf},message = #{message} WHERE resource_id = #{resourceId}
		]]> 	
	</update>
	
	<delete id="deleteEntity" parameterType="RalResource">
		<![CDATA[ 
    		DELETE FROM ral_resource WHERE resource_id = #{resourceId}    		
        ]]> 
	</delete>
	
	<delete id="deleteByPK" parameterType="Integer">
		<![CDATA[ 
    		DELETE FROM ral_resource WHERE resource_id = #{resourceId}    		
        ]]> 
	</delete>
	
	<delete id="delete" parameterType="com.ecarinfo.persist.criteria.Criteria">
		<![CDATA[ 
    		DELETE FROM ral_resource WHERE ${whereCond}     		
        ]]> 
	</delete>
	
</mapper>  